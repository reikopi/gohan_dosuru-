<h2 class="text-center">メンバーログインをする</h2>

<div class="row justify-content-center">
<%= form_with model:@member, url: session_path(resource_name) do |f| %>

  <div class="field">
  <%= f.label :名前 %><br>
  <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログインする", class:"btn btn-outline-primary" %>
  </div>
<% end %>
</div>

<%= link_to "メンバー登録をまだしていない方はこちら", new_member_registration_path, class:"btn btn-success" %>
